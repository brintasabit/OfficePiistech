                        <input class="w3-input w3-border" type="hidden" placeholder="employeeId" id="EmployeeId">
                    </div>
                    <div class="w3-half">
                        <label>Name</label>
                        <input class="w3-input w3-border" type="text" placeholder="Name" id="Name" value="@Model.Name">
                        @*@Html.EditorFor(model => model.Name, "", new { @class = "text-danger" })*@
                    </div>
                    <div class="w3-half">
                        <label>Age</label>
