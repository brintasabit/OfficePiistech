                        @*@Html.EditorFor(model => model.Age, "", new { @class = "text-danger" })*@
                    </div>
                    <div class="w3-half">
                        <label>Office</label>
                        <input class="w3-input w3-border" type="text" placeholder="Office" id="Office">
                        @*@Html.EditorFor(model => model.Office, "", new { @class = "text-danger" })*@
                    </div>
                    <div class="w3-half">
                        <label>Position</label>
                        <input class="w3-input w3-border" type="text" placeholder="Position" id="Position">
                        @*@Html.EditorFor(model => model.Position, "", new { @class = "text-danger" })*@
                    </div>
                    <div class="w3-half">
                        <label>Salary</label>
                        <input class="w3-input w3-border" type="text" placeholder="Salary" id="Salary">
                        @*@Html.EditorFor(model => model.Salary, "", new { @class = "text-danger" })*@
                    </div>
                    <div class="w3-half">
                        <label>Is Current Employee?</label>
                        @*<input class="w3-input w3-border" type="checkbox" id="IsCurrentEmployee">*@
                        @Html.EditorFor(model => model.IsCurrentEmployee, "", new { @class = "text-danger" })
                    </div>
                    <div id="saveEmp" class="w3-half">
                        <div class="btnButton">
                            <button type="submit" class="btn btn-success"><i class="material-icons">person_add</i>Add</button>

                        </div>
